rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Landlords collection - users can create/update their own document
    match /landlords/{userId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create/update if the document ID matches the authenticated user's UID
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // Prevent deletion for security
      allow delete: if false;
    }
    
    // Admins collection - only admins can read, no user writes
    match /admins/{adminId} {
      // Only authenticated users can check if they are admin
      allow read: if isAuthenticated();
      // Users cannot write to admins collection (only server/admin SDK)
      allow write: if false;
    }
    
    // Packages collection - read-only for authenticated users
    match /packages/{packageId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Payments collection - users can read their own payments
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Subscriptions collection - users can read their own subscriptions
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Promos collection - read-only for authenticated users
    match /promos/{promoId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


